<script>
document.addEventListener("turbolinks:load", function() {
  var list = document.getElementById('chatHistory');
  if (list) {
    list.scrollTop = list.scrollHeight;
  }
});
</script>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<div class="container mt-4">
  <div class="row clearfix">
    <div class="col-lg-12">
        <div class="card chat-app">
            <div id="plist" class="people-list">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-search"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="Search...">
                </div>
                <ul class="list-unstyled chat-list mt-2 mb-0">
                  <% for user in User.all%>
                    <%= render 'chatUser', userObj: user %>
                  <% end %>
                </ul>
            </div>
            <div class="chat">
                <div class="chat-header clearfix">
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                            </a>
                            <div class="chat-about">
                                <h6 class="m-b-0">Group Chat</h6>
                                <small>Members Online : 1</small>
                            </div>
                        </div>
                        <div class="col-lg-6 hidden-sm text-right">
                            <a href="javascript:void(0);" class="btn btn-outline-secondary"><i class="fa fa-camera"></i></a>
                            <a href="javascript:void(0);" class="btn btn-outline-primary"><i class="fa fa-image"></i></a>
                            <a href="javascript:void(0);" class="btn btn-outline-info"><i class="fa fa-cogs"></i></a>
                            <a href="javascript:void(0);" class="btn btn-outline-warning"><i class="fa fa-question"></i></a>
                        </div>
                    </div>
                </div>
                <div class="chat-history">
                    <ul id= "chatHistory" class="m-b-0" style="height: 500px; overflow-y: auto; overflow-x: hidden;">
                        <% for message in @messages %>
                          <%= render 'chat', messageObj: message %>
                        <% end %>
                    </ul>
                </div>
                <div class="chat-message clearfix">
                    <div class="input-group mb-0">
                      <%= form_with url: messages_path do | form | %>
                      <div class="form-group">
                        <%= form.text_area :message, size: "90", class: "form-control", placeholder: "Type message and press enter" %>
                        <%= form.button '<i class="fa fa-send input-group-text"></i>'.html_safe, class: "btn" %>
                        </div>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>