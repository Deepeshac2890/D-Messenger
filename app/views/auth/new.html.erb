<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-3 pb-1">Login</h4>
                </div>
                  <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
                    <div class="form-group row">
                      <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter Username" %>
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-10"> 
                        <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter Password" %>
                      </div>
                    </div>
                    <div class="form-group row justify-content-center">
                      <%= f.submit "Log-in", class: "btn btn-primary btn-block fa-lg gradient-custom-2 mb-1" %>
                    </div>

                    <div class="form-group row justify-content-center">
                      <a href = <%= signup_path%> class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"> Don't have account ? Sign Up !</a>
                    </div>
                  <% end %>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">You chat we secure</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>